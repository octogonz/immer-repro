{
  "$schema": "http://json.schemastore.org/tsconfig",

  "compilerOptions": {
    "outDir": "lib",
    "rootDirs": ["src/"],
    "sourceRoot": "src",

    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "inlineSources": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "types": [],

    "module": "esnext",
    "moduleResolution": "node",

    "target": "es5",
    "lib": [
      "dom",
      "es5",
      "es2015.collection",
      "es2015.core",
      "es2015.iterable",
      "es2015.promise",
      "es2016.array.include",
      "es2017.object",
      "es2018.promise",
      "es2020.promise"
    ]
  },
  "include": ["src/**/*.ts"]
}
